    <servlet>
        <servlet-name>FindDrinkByKindOfDrink</servlet-name>
        <servlet-class>Controller.FindDrinkByKindOfDrink</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMenuForEachPage</servlet-name>
        <url-pattern>/GetMenuForEachPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataForIndexPage</servlet-name>
        <url-pattern>/DataForIndexPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <dependency>
        <groupId>com.paypal.sdk</groupId>
        <artifactId>rest-api-sdk</artifactId>
        <version>1.14.0</version>
    </dependency>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/RegisterUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DrinkPage</servlet-name>
        <url-pattern>/DrinkPage</url-pattern>
