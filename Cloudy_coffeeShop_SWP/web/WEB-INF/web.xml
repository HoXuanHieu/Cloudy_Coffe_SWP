    <servlet-mapping>
        <servlet-name>FindDrinkByKindOfDrink</servlet-name>
        <url-pattern>/FindDrinkByKindOfDrink</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
